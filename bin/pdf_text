#!/usr/bin/env ruby

require 'rubygems'
$LOAD_PATH.unshift(File.dirname(__FILE__) + "/../lib")

require 'pdf/reader'

if ARGV.empty?
  browser = PDF::Reader.new($stdin)
else
  browser = PDF::Reader.new(ARGV[0])
end
browser.pages.each do |page|
  puts page.text(ARGV[1]) # ARGV[1] is an optional text delimiter
end
